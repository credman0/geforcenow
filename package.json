{
  "name": "geforce-now-desktop",
  "productName": "GeForce NOW",
  "appId": "org.aptstore.geforcenow",
  "description": "Geforce NOW Browser app for crossplaying your games easily in the cloud",
  "author": "Andr√© Gregor-Herrmann <andre.gregor.herrmann@gmail.com>",
  "icon": "assets/icons/gfn64.png",
  "version": "0.2.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liberavia/geforcenow.git"
  },
  "keywords": [
    "Gaming",
    "cloud",
    "launcher",
    "geforce",
    "nvidia"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liberavia/geforcenow/issues"
  },
  "homepage": "https://github.com/liberavia/geforcenow#readme",
  "devDependencies": {
    "electron": "^10.1.3",
    "electron-builder": "^22.9.1"
  },
  "build": {
    "linux": {
      "target": [
        "zip",
        "AppImage",
        "deb",
        "snap"
      ],
      "category": "Game"
    },
    "snap": {
      "plugs": ["desktop", "desktop-legacy", "home", "x11", "unity7", "browser-support", "network", "gsettings", "pulseaudio", "opengl", "joystick"]
    }
  }
}
